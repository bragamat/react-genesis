{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@tests/*": [
        "./__tests__/*"
      ],
    },
  },
  "include": [
    "src/",
    "./src/**/*.{ts, tsx}",
    "__tests__"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
